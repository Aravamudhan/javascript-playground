<% include layouts/header %>
    <link rel="stylesheet" href="/css/edit.css">
    <h1 style="text-align:center;">
        Editing the campground details
    </h1>
    <div id="details-block">
        <div id="camp-form">
            <form action="/campgrounds/<%=campground._id%>?_method=PUT" method="POST">
                <div class="form-group">
                    <input class="form-control" name="campground[name]" type="text" value="<%=campground.name%>" placeholder="Name" required></input>
                </div>
                <div class="form-group">
                    <input class="form-control" name="campground[location]" type="text" value="<%=campground.location%>" placeholder="Location"
                        required></input>
                </div>
                <div class="form-group">
                    <input class="form-control" name="campground[image]" type="text" value="<%=campground.image%>" placeholder="Image URL"></input>
                </div>
                <div class="form-group">
                    <input class="form-control" name="campground[description]" type="text" value="<%=campground.description%>" placeholder="Description"></input>
                </div>
                <div class="form-group">
                    <input class="form-control" name="campground[price]" type="text" value="<%=campground.price%>" placeholder="Price"></input>
                </div>
                <div class="form-group button-block">
                    <button id="camp-submit-button" class="btn btn-primary">Submit</button>
                    <a class="btn btn-warning" href="javascript:history.back()">Cancel</a>
                </div>
            </form>
        </div>
        <div id="map-block">
            <div id="map"></div>
        </div>
    </div>
    <script>
        var latValue = "<%= campground.lat %>";
        var lngValue = "<%= campground.lng %>";
        var campName = "<%= campground.name %>";
    </script>
    <script src="/js/edit.js"></script>
<% include layouts/footer %>
<script src="https://maps.googleapis.com/maps/api/js?key=<%=MAP_API_KEY%>&libraries=places&callback=initMap" async defer></script>