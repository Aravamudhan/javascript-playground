<% include layouts/header %>
    <link rel="stylesheet" href="/css/campedit.css">
    <div class="container">
        <div class="row">
            <h1 style="text-align:center;">Edit campground</h1>
            <div style="width:30%;margin:25px auto;">
                <form action="/campgrounds/<%=campground._id%>?_method=PUT" method="POST">
                    <div class="form-group">
                        <input class="form-control" name="campground[name]" type="text" value="<%=campground.name%>">
                        </input>
                    </div>
                    <div class="form-group">
                        <input class="form-control" name="campground[price]" type="text" value="<%=campground.price%>">
                        </input>
                    </div>
                    <div class="form-group">
                        <input class="form-control" name="campground[image]" type="text" value="<%=campground.image%>">
                        </input>
                    </div>
                    <div class="form-group">
                        <input class="form-control" name="campground[description]" type="text" value="<%=campground.description%>">
                        </input>
                    </div>
                    <div class="form-group edit-btn-block">
                        <button class="btn btn-lg btn-primary">Submit</button>
                        <a class="btn btn-lg btn-warning" href="javascript:history.back()">Cancel</a>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <% include layouts/footer %>