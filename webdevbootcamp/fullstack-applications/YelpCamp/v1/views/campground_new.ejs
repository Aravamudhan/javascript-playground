<% include layouts/header %>

<div class="container">
    <div class="row">
        <h1 style="text-align:center;">Adding new campground</h1>
        <div style="width:30%;margin:25px auto;">
            <form action="/campgrounds" method="POST">
                <div class="form-group">
                    <input class="form-control" name="campName" type="text" placeholder="Name"></input>    
                </div>
                <div class="form-group">
                    <input class="form-control" name="campImage" type="text" placeholder="Image URL"></input>    
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block">Submit</button>    
                </div>
            </form>
            <a href="/campgrounds" class="btn btn-danger" style="display:table;margin:0 auto; white-space: normal !important; word-wrap: break-word;">Back to campgrounds</a>
        </div>
    </div>
</div>

<% include layouts/footer %>