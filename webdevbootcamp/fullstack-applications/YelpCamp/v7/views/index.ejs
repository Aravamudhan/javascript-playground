<% include layouts/header %>

<div class="container">
    <header class="jumbotron">
        <div class="container">
            <h1>Welcome to Yelp camp!</h1>
            <p>View our handpicked campgrounds for you</p>
            <p>
                <a class="btn btn-primary btn-large" href="/campgrounds/new">Add a new campground</a>
            </p>
        </div>
    </header>
    <div class="row text-center" style="display:flex;flex-wrap:wrap;">
        <% campData.forEach(value=> { %>
        <div class="col-md-3 col-sm-6">
            <div class="thumbnail">
                <img src="<%=value.image.url%>" style="width:100%;height:25vh"></img>
                <div class="caption"><h4><%=value.name%></h4></div>
                <p>
                    <a class="btn btn-primary" href="/campgrounds/<%=value._id%>">More Info</a>
                </p>
            </div>
        </div>
    <% }); %>    
    </div>
</div>

<% include layouts/footer %>